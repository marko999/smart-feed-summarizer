# OpenAI API Key for AI summarization (add your key here)
# OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Update Schedule (cron format)
UPDATE_SCHEDULE=0 */6 * * *

# Content Limits
MAX_ITEMS_PER_FEED=10
SUMMARY_MAX_LENGTH=300
CONTENT_MAX_LENGTH=4000

# Scoring Weights (0.0 to 1.0)
WEIGHT_ENGAGEMENT=0.3
WEIGHT_RECENCY=0.25
WEIGHT_TOPIC_MATCH=0.25
WEIGHT_QUALITY=0.15
WEIGHT_SOURCE=0.05